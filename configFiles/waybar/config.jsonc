// -*- mode: jsonc -*-
{
    "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 30, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 0, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "hyprland/workspaces",
        "group/np",
        "tray"
        // "sway/mode",
        // "sway/scratchpad",
        // "custom/media"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        // "power-profiles-daemon",
        "group/dc",
        "group/cm",
        "group/sp",
        "group/bb",
        "group/tl"
        // "keyboard-state",
        // "custom/power"
    ],
    // Modules configuration
    "backlight": {
        // "device": "acpi_video1",
        "format": "{icon} {percent}%",
        "format-icons": [
            "Û∞õ©",
            "Û±©é",
            "Û±©è",
            "Û±©ê",
            "Û±©ë",
            "Û±©í",
            "Û±©ì",
            "Û±©î",
            "Û±©ï",
            "Û±©ñ",
            "Û∞õ®"
        ]
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "interval": 10,
        "format": "{icon} {capacity}%",
        "format-full": "Û∞Åπ {capacity}%",
        "format-charging": "{icon}Û±êã {capacity}%",
        "format-plugged": "{icon}Û∞ö• {capacity}%",
        "format-icons": [
            "Û∞Çé",
            "Û∞Å∫",
            "Û∞Åª",
            "Û∞Åº",
            "Û∞ÅΩ",
            "Û∞Åæ",
            "Û∞Åø",
            "Û∞ÇÄ",
            "Û∞ÇÅ",
            "Û∞ÇÇ"
        ]
    },
    "clock": {
        "timezone": "America/Bogota",
        "tooltip-format": "{calendar}",
        "format-alt": "{:%Y/%m/%d}"
    },
    "cpu": {
        "format": "Û∞çõ {avg_frequency}G",
        "tooltip": true,
        "tooltip-format": "{usage}%",
        "on-click": "alacritty -e 'htop'"
    },
    "custom/memory-swap": {
        "interval": 15,
        "format": "Û∞Øç  {}G",
        "exec": "free -m | awk '/Swap/ {printf \"%.1f\", $3/1024}'"
    },
    "custom/mic": {
    "format": "{}",
    "exec": "wpctl get-volume 56 | awk '{if ($3 == \"[MUTED]\") print \"Û∞ç≠ 0%\"; else print \"Û∞ç¨ \" int($2 * 100) \"%\"}'",
    "interval": 1,
    "on-click": "wpctl set-mute 56 toggle",
    "on-scroll-up": "wpctl set-volume 56 5%+",
    "on-scroll-down": "wpctl set-volume 56 5%-"
},
"custom/pacman": {
    "format": "Û∞èñ {}",
    "interval": 3000,
    "exec": "checkupdates | wc -l",
    "exec-if": "exit 0",
    "on-click": "alacritty -e yay -Syyu; pkill -SIGRTMIN+8 waybar", // update system
    "signal": 8
},
    "custom/sep": {
        "format": "  ",
        "tooltip": false
    },
    "disk": {
        "interval": 15,
        "format": "Û∞íã {percentage_free}%",
        "path": "/"
    },
    "hyprland/language": {
        "format": "{short}",
        "on-click": "hyprctl switchxkblayout at-translated-set-2-keyboard next"
    },
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "warp-on-scroll": false,
        "format": "{name}",
        "format-icons": {
            "1": "ÔÑ†",
            "2": "Ôâ®",
            "3": "ÔÑ°",
            "4": "ÔÜº",
            "5": "ÔÅµ",
            "urgent": "ÔÅ™",
            "focused": "ÔÜí",
            "default": "ÔÑë"
        }
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    "memory": {
        "interval": 15,
        "format": "ÓøÖ {used:0.1f}G"
    },
    "network": {
        // "interface": "wlp2*", // (Optional) Para forzar una interfaz espec√≠fica
        "format-wifi": "Ôá´  {bandwidthUpBits} Û∞Øé {bandwidthDownBits}",
        "format-ethernet": "ÔÉÅ  {bandwidthUpBits} Û∞Øé {bandwidthDownBits} {ipaddr}/{cidr}",
        "tooltip-format": "{essid} {ipaddr}/{cidr}",
        "format-linked": "{ifname} (No IP) ÔÉÅ",
        "format-disconnected": "‚ö† No Internet",
        "on-click": "nm-connection-editor"
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{icon} {temperatureC}¬∞C",
        "format-icons": [
            "Ôù´",
            "Ôãâ",
            "Ôù©"
        ]
    },
    "tray": {
        "icon-size": 20,
        "spacing": 10
    },
    "wireplumber": {
        "format": "{icon}  {volume}%",
        "format-muted": "Óª®  {volume}%",
        "max-volume": 250,
        "on-click": "pavucontrol",
        "format-icons": [
            "ÔÄ¶",
            "ÔÄß",
            "ÔÄ®"
        ]
    },
    // Groups
    "group/tl": {
        "orientation": "horizontal",
        "modules": [
            "temperature",
            "custom/sep",
            "hyprland/language"
        ]
    },
    "group/bb": {
        "orientation": "horizontal",
        "modules": [
            "backlight",
            "custom/sep",
            "battery"
        ]
    },
    "group/sp": {
        "orientation": "horizontal",
        "modules": [
            "wireplumber",
            "custom/sep",
            "custom/mic"
        ]
    },
    "group/cm": {
        "orientation": "horizontal",
        "modules": [
            "custom/memory-swap",
            "custom/sep",
            "memory"
        ]
    },
    "group/dc": {
        "orientation": "horizontal",
        "modules": [
            "disk",
            "custom/sep",
            "cpu"
        ]
    },
    "group/np": {
        "orientation": "horizontal",
        "modules": [
            "network",
            "custom/sep",
            "custom/pacman"
        ]
    },
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": [
            "",
            "Ôãí"
        ],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    "mpd": {
        "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ‚∏®{songPosition}|{queueLength}‚∏© {volume}% ÔÄÅ",
        "format-disconnected": "Disconnected ÔÄÅ",
        "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ÔÄÅ",
        "unknown-tag": "N/A",
        "interval": 5,
        "consume-icons": {
            "on": "ÔÉÑ "
        },
        "random-icons": {
            "off": "<span color=\"#f53c3c\">ÔÅ¥</span> ",
            "on": "ÔÅ¥ "
        },
        "repeat-icons": {
            "on": "ÔÄû "
        },
        "single-icons": {
            "on": "ÔÄû1 "
        },
        "state-icons": {
            "paused": "ÔÅå",
            "playing": "ÔÅã"
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "battery#bat2": {
        "bat": "BAT2"
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "ÔÉß",
            "performance": "ÔÉß",
            "balanced": "Ôâé",
            "power-saver": "ÔÅ¨"
        }
    },
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/power": {
        "format": "‚èª ",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
        "menu-actions": {
            "shutdown": "shutdown",
            "reboot": "reboot",
            "suspend": "systemctl suspend",
            "hibernate": "systemctl hibernate"
        }
    }
}